@using MVCSumApp.Models
@model CalcViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">Calc sum of two numbers - MVC Application</p>
</div>

<div class="row">
    <div class="col-md-8">
        <section id="calcForm">
            @using (Html.BeginForm("Calc", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h2>Sum two numbers</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FirstNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FirstNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SecondNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.SecondNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SecondNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <h2>@ViewBag.message</h2>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Calculate" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>